<%- layout('layouts/main') %>

<div class="flex h-screen overflow-hidden">
  <!-- Desktop Sidebar -->
  <aside id="desktop-sidebar" class="hidden lg:flex flex-col w-64 bg-gray-900 border-r border-gray-800">
    <%- include('partials/sidebar') %>
  </aside>
  
  <!-- Mobile Sidebar -->
  <aside id="mobile-sidebar" class="lg:hidden fixed inset-y-0 left-0 z-40 w-64 bg-gray-900 transform -translate-x-full transition-transform duration-300">
    <%- include('partials/sidebar') %>
  </aside>
  
  <!-- Mobile Overlay -->
  <div id="mobile-overlay" class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-30 hidden"></div>
  
  <!-- Main Content -->
  <main class="flex-1 flex flex-col overflow-hidden">
    <%- include('partials/header') %>
    
    <!-- Album Container -->
    <div id="album-container" class="flex-1 overflow-auto p-4 lg:p-6">
      <!-- Albums will be rendered here -->
    </div>
    
    <!-- Mobile FAB -->
    <button id="add-album-fab" class="fab lg:hidden">
      <i class="fas fa-plus text-xl"></i>
    </button>
  </main>
</div>

<!-- Modals -->
<%- include('partials/modals/create-list') %>
<%- include('partials/modals/add-album') %>
<%- include('partials/modals/import') %>

<!-- Toast container -->
<%- include('partials/toast') %>

<!-- Scripts -->
<script src="/js/app.js"></script>
<script src="/js/lists.js"></script>
<script src="/js/albums.js"></script>
<script src="/js/sortable-init.js"></script>