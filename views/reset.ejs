<div class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <h1 class="font-cinzel text-4xl font-bold text-accent glow-text">SuShe Stargate</h1>
      <p class="text-gray-400 mt-2">Create New Password</p>
    </div>
    
    <!-- Flash messages -->
    <% if (error_msg && error_msg.length > 0) { %>
      <div class="bg-red-900 border border-red-700 text-red-200 px-4 py-3 rounded mb-4">
        <i class="fas fa-exclamation-circle mr-2"></i><%= error_msg %>
      </div>
    <% } %>
    
    <!-- Reset password form -->
    <form action="/auth/reset/<%= token %>" method="POST" class="bg-gray-900 rounded-lg p-6 shadow-lg">
      <h2 class="text-2xl font-semibold mb-6">Reset Password</h2>
      
      <%- include('partials/password-input', { 
        id: 'newPassword',
        name: 'newPassword',
        label: 'New Password',
        required: true,
        minlength: 8,
        showHint: true
      }) %>

      <%- include('partials/password-input', { 
        id: 'confirmPassword',
        name: 'confirmPassword',
        label: 'Confirm Password',
        required: true,
        containerClass: 'mb-6'
      }) %>
      
      <button type="submit" class="btn-primary w-full">
        Reset Password
      </button>
      
      <div class="mt-6 text-center text-sm">
        <a href="/auth/login" class="text-accent hover:text-accent-hover">
          <i class="fas fa-arrow-left mr-1"></i>
          Back to Login
        </a>
      </div>
    </form>
  </div>
</div>

<script src="/js/auth.js"></script>