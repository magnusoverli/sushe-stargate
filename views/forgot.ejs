<%- layout('layouts/main') %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <h1 class="font-cinzel text-4xl font-bold text-accent glow-text">SuShe Stargate</h1>
      <p class="text-gray-400 mt-2">Reset Your Password</p>
    </div>
    
    <!-- Flash messages -->
    <% if (error_msg && error_msg.length > 0) { %>
      <div class="bg-red-900 border border-red-700 text-red-200 px-4 py-3 rounded mb-4">
        <i class="fas fa-exclamation-circle mr-2"></i><%= error_msg %>
      </div>
    <% } %>
    
    <% if (success_msg && success_msg.length > 0) { %>
      <div class="bg-green-900 border border-green-700 text-green-200 px-4 py-3 rounded mb-4">
        <i class="fas fa-check-circle mr-2"></i><%= success_msg %>
      </div>
    <% } %>
    
    <!-- Forgot password form -->
    <form action="/auth/forgot" method="POST" class="bg-gray-900 rounded-lg p-6 shadow-lg">
      <h2 class="text-2xl font-semibold mb-6">Forgot Password</h2>
      
      <p class="text-gray-400 mb-6">
        Enter your email address and we'll send you a link to reset your password.
      </p>
      
      <div class="mb-6">
        <label for="email" class="block text-sm font-medium mb-2">Email</label>
        <input type="email" id="email" name="email" required
               class="input-dark w-full" 
               placeholder="your@email.com">
      </div>
      
      <button type="submit" class="btn-primary w-full">
        Send Reset Link
      </button>
      
      <div class="mt-6 text-center text-sm">
        <a href="/auth/login" class="text-accent hover:text-accent-hover">
          <i class="fas fa-arrow-left mr-1"></i>
          Back to Login
        </a>
      </div>
    </form>
  </div>
</div>