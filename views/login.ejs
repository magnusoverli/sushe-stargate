<div class="min-h-screen flex items-center justify-center p-4 safe-top safe-bottom">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <h1 class="font-cinzel text-4xl font-bold text-accent glow-text">SuShe Stargate</h1>
      <p class="text-gray-400 mt-2">Your Personal Music Collection</p>
    </div>
    
    <!-- Flash messages -->
    <% if (error_msg && error_msg.length > 0) { %>
      <div class="bg-red-900 border border-red-700 text-red-200 px-4 py-3 rounded mb-4">
        <i class="fas fa-exclamation-circle mr-2"></i><%= error_msg %>
      </div>
    <% } %>
    
    <% if (success_msg && success_msg.length > 0) { %>
      <div class="bg-green-900 border border-green-700 text-green-200 px-4 py-3 rounded mb-4">
        <i class="fas fa-check-circle mr-2"></i><%= success_msg %>
      </div>
    <% } %>
    
    <!-- Login form -->
    <form id="login-form" action="/auth/login" method="POST" class="bg-gray-900 rounded-lg p-6 shadow-lg">
      <h2 class="text-2xl font-semibold mb-6">Login</h2>
      
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium mb-2">Email</label>
        <input type="email" id="email" name="email" required
               class="input-dark w-full" 
               placeholder="your@email.com">
      </div>
      
      <%- include('partials/password-input', { 
        id: 'password',
        name: 'password',
        label: 'Password',
        required: true
      }) %>
      
      <div class="flex items-center justify-between mb-6">
        <label class="flex items-center">
          <input type="checkbox" name="remember" class="mr-2">
          <span class="text-sm">Remember me</span>
        </label>
        <a href="/auth/forgot" class="text-sm text-accent hover:text-accent-hover">
          Forgot password?
        </a>
      </div>
      
      <button type="submit" class="btn-primary w-full">
        Login
      </button>
      
      <div class="mt-6 text-center text-sm">
        <span class="text-gray-400">Don't have an account?</span>
        <a href="/auth/register" class="text-accent hover:text-accent-hover ml-1">
          Register
        </a>
      </div>
    </form>
  </div>
</div>

<script src="/js/auth.js"></script>