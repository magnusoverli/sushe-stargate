<%
  // Set defaults for optional parameters
  const fieldId = locals.id || 'password';
  const fieldName = locals.name || 'password';
  const fieldLabel = locals.label || 'Password';
  const placeholder = locals.placeholder || '••••••••';
  const required = locals.required !== false;
  const minLength = locals.minlength || null;
  const showHint = locals.showHint || false;
%>

<div class="<%= locals.containerClass || 'mb-4' %>">
  <label for="<%= fieldId %>" class="block text-sm font-medium mb-2"><%= fieldLabel %></label>
  <div class="relative">
    <input type="password" 
           id="<%= fieldId %>" 
           name="<%= fieldName %>" 
           <%= required ? 'required' : '' %>
           <%= minLength ? `minlength="${minLength}"` : '' %>
           class="input-dark w-full pr-10" 
           placeholder="<%= placeholder %>">
    <button type="button" class="toggle-password absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-white">
      <i class="fas fa-eye"></i>
    </button>
  </div>
  <% if (showHint && minLength) { %>
    <p class="text-xs text-gray-500 mt-1">Minimum <%= minLength %> characters</p>
  <% } %>
</div>