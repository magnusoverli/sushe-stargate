<div class="flex flex-col h-full">
  <div class="p-4 border-b border-gray-800">
    <h2 class="text-lg font-semibold mb-3">My Lists</h2>
    <button id="create-list-btn" class="btn-primary w-full">
      <i class="fas fa-plus mr-2"></i>Create List
    </button>
  </div>

  <div class="flex-1 overflow-y-auto">
    <div id="lists-container" class="p-2 space-y-1">
      <!-- Lists will be rendered here by JavaScript -->
    </div>
  </div>

  <div class="p-4 border-t border-gray-800 space-y-2">
    <button id="import-btn" class="w-full text-left px-3 py-2 hover:bg-gray-800 rounded">
      <i class="fas fa-upload mr-2"></i>Import List
    </button>
    <button id="export-btn" class="w-full text-left px-3 py-2 hover:bg-gray-800 rounded">
      <i class="fas fa-download mr-2" id="export-icon"></i>
      <span id="export-text">Export List</span>
    </button>
    <button id="clear-all-btn" class="w-full text-left px-3 py-2 text-red-400 hover:bg-gray-800 rounded">
      <i class="fas fa-trash-alt mr-2"></i>Clear All Lists
    </button>
    <a href="/settings" class="block w-full text-left px-3 py-2 hover:bg-gray-800 rounded">
      <i class="fas fa-cog mr-2"></i>Settings
    </a>
    <a href="/admin" id="admin-btn" class="hidden block w-full text-left px-3 py-2 hover:bg-gray-800 rounded">
      <i class="fas fa-shield-alt mr-2"></i>Admin Panel
    </a>
    <a href="/auth/logout" class="block w-full text-left px-3 py-2 hover:bg-gray-800 rounded">
      <i class="fas fa-sign-out-alt mr-2"></i>Logout
    </a>
  </div>
</div>